@model List<Product>

<!DOCTYPE html>
<html>
<head>
    <meta content="width=device-width" />
    <title>Products table and list page</title>
    <style>
        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        li {
            margin-bottom: 10px;
            font-size: 16px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

            td:nth-child(3), th:nth-child(3) {
                text-align: right;
            }

            td:nth-child(3), th:nth-child(3) {
                border-bottom: 2px solid #333;
            }

        tr:hover {
            background-color: #f5f5f5;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <h2>Products</h2>
    <ul>
        @foreach (var product in Model)
        {
            <li>@product.ID. @product.Name - @product.Price$ (@product.CreatedDate)</li>
        }
    </ul>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Created Date</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.Name</td>
                <td>@product.Price$</td>
                <td>@product.CreatedDate</td>
            </tr>
        }
    </table>

</body>
</html>
